#!/usr/bin/env bash
set -euo pipefail
resolve_path() {
  python3 - "$1" <<'PY'
import os, sys
print(os.path.realpath(sys.argv[1]))
PY
}

SCRIPT_PATH="$(resolve_path "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(cd "$(dirname "${SCRIPT_PATH}")" && pwd)"
AGENTBOX_AGENT="codex" exec "${SCRIPT_DIR}/agentbox-run" "$@"
